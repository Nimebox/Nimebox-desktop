{
  "name": "nimebox-desktop",
  "version": "0.0.1",
  "author": "xdk78 <xdk78@interia.pl>",
  "description": "Nimebox - watch anime easy way",
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "yarn compile && electron-builder",
    "build:dir": "yarn build -- --dir -c.compression=store -c.mac.identity=null",
    "build:clean": "del dist/electron/* !.gitkeep",
    "build:web": "webpack --env.production --config .electron-vue webpack.web.config.js",
    "compile": "electron-webpack",
    "dev": "electron-webpack dev",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "postinstall": "npm run lint:fix"
  },
  "build": {
    "productName": "Nimebox Desktop",
    "appId": "org.xdk78.nimebox-desktop",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "animesub-api": "^0.7.5",
    "axios": "^0.17.1",
    "mal-scraper": "^2.2.1",
    "source-map-support": "^0.5.3",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vue-router": "^3.0.1",
    "vuetify": "^1.0.11",
    "vuex": "^3.0.1",
    "vuex-persistedstate": "^2.5.1"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "del-cli": "^1.1.0",
    "devtron": "^1.4.0",
    "electron": "^1.8.4",
    "electron-builder": "^19.55.1",
    "electron-debug": "^1.5.0",
    "electron-webpack": "^1.12.1",
    "electron-webpack-eslint": "^1.3.0",
    "electron-webpack-vue": "^1.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "style-loader": "^0.20.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-loader": "^14.2.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "resolutions": {
    "webpack-sources": "1.0.1",
    "source-map-support": "^0.5.3"
  }
}
